<div class="body">

  <div class="login_main_image">
    <%= image_tag "s1城壁（夕方）.jpg"%>
  </div>

  <div class="login_form">
    <div class="ses_login">ログイン</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class='form-text-wrap'>
        <%= f.label :email, class:"ses_form-text_email" %><br />
        </div>
        <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <%= f.label :password, class:"ses_form-text" %><br />
        </div>
        <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="ses_login_field">
          <%= f.check_box :remember_me,{ style: 'transform: scale(1.5);' }  %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="ses_login_actions">
        <%= f.submit "ログイン",class:"ses_login_btn" %>
      </div>
    <% end %>

    <div class="signup_and_foget">
    <%= render "devise/shared/links" %>
    </div>
    <%= link_to "トップへ戻る" ,root_path ,class:"login_back_main_btn"%>
  </div>
</div>